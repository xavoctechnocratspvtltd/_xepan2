.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    {quick_search_icon}
                    i(class="fa fa-search search-icon")
                    {/}
    {/Pannel}
    .main-box-body.clearfix.table
        .table-responsive
            table.table.user-list.table-hover(style="width:100%")
                {header}
                thead
                    {cols}{col}
                    th(id="{$sortid}")
                        a(href="javascript:void(0)")
                            {$descr}
                            {sort}
                            span(class="{$sorticon}")
                            {/}
                    {/}{/}
                {/}
                {$subheader}

                tbody
                    {rows}{row}
                    tr(class="{$odd_even}" data-id="{$row_id}")
                        {cols}{col}
                        <td {$tdparam}>
                        {$content}
                        </td>
                        {/}{/}
                    {/}{/}
                    {not_found}
                    tr
                        td.atk-padding-large.atk-align-center
                            span.atk-label.atk-effect-warning
                                span.icon-attention &nbsp;{$not_found_message}
                    {/}

                {totals}
                tfoot
                    tr(class="totals")
                        {cols}{col}
                        <td {$tdparam}>
                        {$content}
                        </td>
                        {/}{/}
                {/}
            {$Paginator}
