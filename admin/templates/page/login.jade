div
  {Content}

  {LoginForm}
  .atk-form(style="{$style}" class="{$class}" id="{$_name}")
    <form action="{$form_action}" method="{form_method}post{/}" {$enctype} {$attributes}>

    {Layout}
    div.atk-cells-group.atk-cells-gutter-large.atk-newform.atk-valign-top
        {Content}
        {form_line}
        div.atk-cells.atk-push(class="atk-form-row-{$field_type} {$row_class}")
            {label_div}
            .atk-cell.atk-form-label.atk-text-nowrap
                <label for="{$field_name}" {field_mandatory}class="mandatory"{/}>
                span {$field_caption}
                {$after_label}
                </label>
            {/}

            .atk-cell.atk-form-field.atk-jackscrew(class="{$field_class}")
                {$above_field}{$cells_start}{$before_field}{$input_cell_start}{$before_input}{$field_input}{$icon}{$after_input}{$input_cell_stop}{$after_field}{$cells_stop}{$below_field}

            {$field_hint}
            {field_error}

            .atk-form-error
                span.atk-size-micro.atk-effect-danger {$field_error_str}
            {/}

        {/}

        {/Content}
        .field-error-template.atk-form-error
            span.atk-effect-danger.field-error-text {$field_error_str}


    {button_row}
    .atk-cells.atk-push
        .atk-cell
        .atk-cell.atk-actions(class="{$buttons_class}")
            {$form_buttons}
    {/}

    {/Layout}
    </form>
  {/}
  {/}